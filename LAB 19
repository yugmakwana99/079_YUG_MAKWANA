A)import sympy as sp

def z_transform_unit_step():
    n, z = sp.symbols('n z')
    return sp.summation(1 * z**(-n), (n, 0, sp.oo))

def check_stability(poles):
    for p in poles:
        if abs(p) >= 1:
            return "Unstable"
    return "Stable"

print("Z-transform of unit step:", z_transform_unit_step())


B) poles = [0.6, 0.4]

def check_stability(p):
    for x in p:
        if abs(x) >= 1:
            return "Unstable"
    return "Stable"

print("Poles:", poles)
print("System stability:", check_stability(poles))

